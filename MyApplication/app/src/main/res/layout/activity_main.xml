<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jeonghwan.kumoh.se.first.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_android"
        android:id="@+id/textView" />
        //android:text="Hello World! In res.layout.activity_main.xml"/>

    <!-- 버튼은 TextView를 상속하고 있다! -->
    <!-- 버튼에 id 추가 -->
    <Button
        android:id="@+id/starBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_android"
        android:layout_below="@+id/start02Btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/start02Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="connect to naver"
        android:layout_below="@+id/start03Btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/start03Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="make call"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp" />

    <Button
        android:id="@+id/moveNewActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move To NewActivity!"
        android:layout_below="@+id/starBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp" />

    <Button
        android:id="@+id/moveTextViewBtn"
        android:text="Move To TextView!"
        android:textColor="#86E57F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moveNewActivityBtn"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="54dp" />

    <Button
        android:id="@+id/moveButtonViewBtn"
        android:text="Move To ButtonView!"
        android:textColor="#86E57F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moveNewActivityBtn"
        android:layout_alignLeft="@+id/moveTextViewBtn"
        android:layout_alignStart="@+id/moveTextViewBtn" />
</RelativeLayout>
