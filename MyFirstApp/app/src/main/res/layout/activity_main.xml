<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jeonghwan.kumoh.se.myfirstapp.MainActivity">

    <!-- TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" / -->

    <EditText
        android:id="@+id/wordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input word!"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/responseEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input response!"
        android:layout_below="@+id/wordEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/confirmBtn01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_below="@+id/responseEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/sendMsgEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input sendMsg To JH robot"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/confirmBtn01"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/confirmBtn02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sendMsg"
        android:layout_below="@+id/sendMsgEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/responseTextView"
        android:text="Response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:layout_marginTop="15dp"
        android:textColor="#0011ff"
        android:layout_below="@+id/confirmBtn02"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
